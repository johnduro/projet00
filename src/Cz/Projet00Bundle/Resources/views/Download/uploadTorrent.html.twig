{% extends "CzProjet00Bundle::layout.html.twig" %}

{% block body %}
	<div class="row">
		<div class="col-md-1"></div>
			<div class="col-md-10">
				<div class="panel panel-primary">
					<div class="panel-heading">
						Upload torrent
					</div>
					<div class="panel-body">
						{{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
							<div class="form-group">
								<div class="col-sm-4">
									{{ form_row(form.name, { 'attr': {'class': 'form-control'}}) }}
								</div>
							</div>
							<div class="form-group">
								<div class="col-sm-4">
									{{ form_row(form.type, { 'attr': {'class': 'form-control'}}) }}
								</div>
							</div>
							<div class="form-group">
								<div class="col-sm-4">
									{{ form_row(form.file, { 'attr': {'type': 'file'}}) }}
								</div>
							</div>
							<div class="form-group">
								<div class="col-sm-10">
									{{ form_row(form.comment, { 'attr': {'class': 'form-control'}}) }}
								</div>
							</div>
							<div class="col-sm-3">
								{{ form_row(form.Telecharger, { 'attr': {'class': 'form-control btn btn-danger'}}) }}
							</div>
						{{ form_end(form) }}
					</div>
				</div>
			</div>
		<div class="col-md-1"></div>
	</div>
{% endblock%}
